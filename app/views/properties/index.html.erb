<section class="container mt-5">
  <h1>Manage Properties</h1>
  <%= link_to 'Add New Property', new_property_path, class: 'btn btn-primary mb-3' %>

  <div class="row">
    <% @properties.each do |property| %>
      <div class="col-md-4">
        <div class="card mb-4">
          <%= image_tag(property.images.first, class: 'card-img-top') if property.images.any? %>
          <div class="card-body">
            <h5 class="card-title"><%= property.name %></h5>
            <p class="card-text">$<%= property.price %> - <%= property.location %></p>
            <%= link_to 'Edit', edit_property_path(property), class: 'btn btn-secondary' %>
            <%= link_to 'Delete', property, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>
