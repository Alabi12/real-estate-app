<section class="container mt-5">
  <div class="row">
    <div class="col-md-8">
      <h1><%= @property.name %></h1>
      <p class="lead">$<%= @property.price %> - <%= @property.location %></p>

      <div id="property-images" class="mb-4">
        <% @property.images.each do |image| %>
          <%= image_tag image.variant(resize: "800x400"), class: "img-fluid mb-2" %>
        <% end %>
      </div>

      <h3>Description</h3>
      <p><%= @property.description %></p>

      <h3>Amenities and Features</h3>
      <ul>
        <!-- Add specific amenities and features here -->
      </ul>
    </div>

    <div class="col-md-4">
      <h3>Location</h3>
      <div id="map" style="width: 100%; height: 300px;"></div>
    </div>
  </div>
</section>

