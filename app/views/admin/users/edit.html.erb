<h1>Edit User</h1>

<%= form_with model: @user, url: admin_user_path(@user), local: true do |form| %>
  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, class: 'form-control', readonly: true %>
  </div>

  <div class="form-group">
    <%= form.label :admin %>
    <%= form.check_box :admin %>
  </div>

  <%= form.submit 'Update User', class: 'btn btn-success' %>
<% end %>
