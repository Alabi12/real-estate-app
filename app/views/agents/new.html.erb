<section class="container mt-5">
  <h1>Create Agent</h1>
  
  <%= form_with model: @agent, local: true do |form| %>
    <div class="row">
      <div class="col-md-6">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control" %>
      </div>
      <div class="col-md-6">
        <%= form.label :contact_information %>
        <%= form.text_field :contact_information, class: "form-control" %>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-md-12">
        <%= form.label :photo %>
        <%= form.file_field :photo, class: "form-control" %>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-md-12">
        <%= form.submit 'Create Agent', class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</section>
