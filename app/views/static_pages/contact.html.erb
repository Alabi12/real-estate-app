<section class="container mt-5">
  <h1>Contact Us</h1>
  
  <%= form_with url: contact_path, local: true do |form| %>
    <div class="row">
      <div class="col-md-6">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control" %>
      </div>
      <div class="col-md-6">
        <%= form.label :email %>
        <%= form.email_field :email, class: "form-control" %>
      </div>
    </div>
    
    <div class="row mt-3">
      <div class="col-md-12">
        <%= form.label :message %>
        <%= form.text_area :message, class: "form-control", rows: 5 %>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-md-12">
        <%= form.submit 'Send Message', class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</section>
